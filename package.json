{
  "name": "violetfit-api",
  "version": "1.0.0",
  "description": "This is a project to develop an API designed to help gyms manage their daily operations efficiently. The API will handle user memberships, workout session bookings, progress tracking, billing, and more. The goal is to provide gym staff and users with an easy-to-use system for managing their gym experience.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "build": "tsup src --out-dir --format .js",
    "test": "jest --testPathPattern=useCases/.*.spec.ts$",
    "test:watch": "jest --testPathPattern=useCases/.*.spec.ts$ --watchAll",
    "test:migrations": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test:integration": "dotenv -e .env.test -- jest -i --testPathPattern=controllers/.*.spec.ts$  --watchAll",
    "test:start:integration": "run-s test:migrations test:integration",
    "test:all": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  }
}
